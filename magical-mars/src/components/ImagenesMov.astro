---
const imagenes = [
    '/src/assets/carrusel/01.jpg',
    '/src/assets/carrusel/02.jpg',
    '/src/assets/carrusel/03.jpg',
    '/src/assets/carrusel/04.jpg',
];
let indiceActual = 0;

// Función para cambiar automáticamente la imagen
function cambiarImagenAuto() {
    const carrusel = document.getElementById('carrusel-imagenes');
    if (carrusel instanceof HTMLElement) {
        indiceActual = (indiceActual + 1) % imagenes.length; // Avanza al siguiente índice
        carrusel.style.transform = `translateX(-${indiceActual * 100}%)`; // Mueve el carrusel
    }
}
---

<div class="w-full bg-gray-200 overflow-hidden">
    <div
        id="carrusel-imagenes"
        class="flex transition-transform duration-700 ease-in-out"
    >
        {imagenes.map((imagen, index) => (
            <img
                key={index}
                src={imagen}
                alt={`Imagen ${index + 1}`}
                class="w-full h-64 object-cover flex-shrink-0"
            />
        ))}
    </div>
</div>

<script>
    if (typeof window !== 'undefined') {
        setInterval(cambiarImagenAuto, 3000); // Cambia cada 3 segundos
    }
</script>